  <modifierdef>HYPER</modifierdef>

  <item>
    <name>Hyper Mode</name>
    <appendix>Right Option to Hyper (Virtual)</appendix>
    <identifier>private.hyper_key</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::OPTION_R,
      KeyCode::VK_MODIFIER_HYPER
    </autogen>
  </item>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_Chrome</name>
    <url type="file">/Applications/Google Chrome.app</url>
  </vkopenurldef>

  <item>
    <name>Hyper+C to open Google Chrome</name>
    <identifier>private.hyper_chrome</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::C, ModifierFlag::HYPER,
      KeyCode::VK_OPEN_URL_Chrome
    </autogen>
  </item>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_Window_Hints</name>
    <url>hammerspoon://hints</url>
    <background/>
  </vkopenurldef>

  <item>
    <name>Hyper+H for Window Hints</name>
    <identifier>private.hyper_hints</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::H, ModifierFlag::HYPER,
      KeyCode::VK_OPEN_URL_Window_Hints
    </autogen>
  </item>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_iTerm</name>
    <url type="file">/Applications/iTerm.app</url>
  </vkopenurldef>

  <item>
    <name>Hyper+T to open iTerm</name>
    <identifier>private.hyper_iterm</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::T, ModifierFlag::HYPER,
      KeyCode::VK_OPEN_URL_iTerm
    </autogen>
  </item>

