prompt_zmanji_setup() {
  # Workaround for https://github.com/Homebrew/homebrew/issues/48428
  source $(brew --prefix)/etc/bash_completion.d/git-prompt.sh

  PROMPT='%~ $(__git_ps1 "(%s)") %# '
  RPROMPT='%*'
}
